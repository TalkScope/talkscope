generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model Report {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())

  mode            String
  transcriptChars Int
  transcriptHash  String

  summary         String
  reportJson      String

  // Optional metadata (MVP)
  ip              String?

  @@index([createdAt])
  @@index([transcriptHash])
}

model Organization {
  id           String   @id @default(cuid())
  name         String
  createdAt    DateTime @default(now())
  clerkUserId  String   @default("")

  teams     Team[]
  patterns  PatternReport[]

  @@index([clerkUserId])
}

model Team {
  id             String   @id @default(cuid())
  name           String
  organizationId String
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  agents       Agent[]
  patterns     PatternReport[]
}

model Agent {
  id        String   @id @default(cuid())
  name      String
  email     String?
  teamId    String
  createdAt DateTime @default(now())

  team           Team           @relation(fields: [teamId], references: [id])
  conversations  Conversation[]
}

model Conversation {
  id        String   @id @default(cuid())
  agentId   String
  createdAt DateTime @default(now())

  transcript   String
  reportJson   String?
  score        Float?

  agent Agent @relation(fields: [agentId], references: [id])

  @@index([agentId])
}

model PatternReport {
  id        String   @id @default(cuid())
  level     String   // "agent" | "team" | "org"
  refId     String   // agentId | teamId | orgId
  createdAt DateTime @default(now())

  windowSize Int
  reportJson String

  organizationId String?
  teamId         String?

  organization Organization? @relation(fields: [organizationId], references: [id])
  team         Team?         @relation(fields: [teamId], references: [id])

  @@index([level, refId])
}

model AgentScore {
  id        String   @id @default(cuid())
  agentId   String
  createdAt DateTime @default(now())

  windowSize Int

  overallScore        Float
  communicationScore  Float
  conversionScore     Float
  riskScore           Float
  coachingPriority    Float

  strengths     String   // JSON string
  weaknesses    String   // JSON string
  keyPatterns   String   // JSON string

  @@index([agentId, createdAt])
}

model AgentScoreHistory {
  id         String   @id @default(cuid())
  agentId    String
  score      Float
  windowSize Int
  createdAt  DateTime @default(now())

  @@index([agentId, createdAt])
}

model BatchJob {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  scope       String
  refId       String
  windowSize  Int
  status      String
  progress    Int      @default(0)
  total       Int      @default(0)

  error       String?

  tasks       BatchTask[]   

  @@index([createdAt])
  @@index([status])
  @@index([scope, refId])
}


model BatchTask {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  jobId      String
  agentId    String
  windowSize Int

  status     String   // "queued" | "running" | "done" | "failed"
  error      String?

  job        BatchJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId, status])
  @@index([agentId])
}
